<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>Air France Flight Status • Mayday Shortcut</title>
  <style>
    :root { font-family: system-ui, -apple-system, Segoe UI, Roboto, Ubuntu, Cantarell, Arial, sans-serif; }
    body { max-width: 560px; margin: 24px auto; padding: 8px; }
    h1 { font-size: 1.4rem; margin-bottom: 12px; }
    form { display: grid; gap: 10px; }
    label { font-weight: 600; }
    input, select, button { padding: 10px 12px; font-size: 1rem; border: 1px solid #ccc; border-radius: 10px; width: 100%; }
    .row { display: grid; grid-template-columns: 1fr 1fr; gap: 10px; }
    .hint { color: #555; font-size: 0.9rem; }
    .small { font-size: 0.85rem; color: #666; }
    .actions { display: flex; gap: 10px; }
    .btn { cursor: pointer; border: none; background: #0033a0; color: white; border-radius: 10px; padding: 12px 14px; }
    .btn.secondary { background: #eee; color: #111; border: 1px solid #ccc; }
  </style>
</head>
<body>
  <h1>Air France Flight Status</h1>
  <p class="hint">Enter a flight number or route. The date uses your local time zone.</p>

  <form id="flightForm">
    <label for="flightNo">Air France Flight Number</label>
    <input id="flightNo" name="flightNo" placeholder="Example AF83" autocomplete="off" />

    <div class="row">
      <div>
        <label for="dep">Departure Airport (IATA)</label>
        <input id="dep" name="dep" placeholder="CDG" maxlength="3" autocomplete="off" />
      </div>
      <div>
        <label for="arr">Arrival Airport (IATA)</label>
        <input id="arr" name="arr" placeholder="JFK" maxlength="3" autocomplete="off" />
      </div>
    </div>

    <div class="row">
      <div>
        <label for="date">Flight Date</label>
        <input id="date" name="date" type="date" />
      </div>
      <div>
        <label for="airline">Airline</label>
        <select id="airline" name="airline">
          <option value="AF" selected>Air France (AF)</option>
          <option value="KL">KLM (KL)</option>
          <option value="TO">Transavia France (TO)</option>
          <option value="DL">Delta (DL)</option>
        </select>
      </div>
    </div>

    <div class="actions">
      <button type="submit" class="btn">Check Status</button>
      <button type="button" id="resetBtn" class="btn secondary">Reset</button>
    </div>
    <p class="small">Tip: If “Flight Number” is filled, the search will use that number. Otherwise, route search will be used.</p>
  </form>

  <script>
    // Prefill today's date
    const dateInput = document.getElementById('date');
    if (!dateInput.value) {
      const now = new Date();
      const yyyy = now.getFullYear();
      const mm = String(now.getMonth() + 1).padStart(2, '0');
      const dd = String(now.getDate()).padStart(2, '0');
      dateInput.value = `${yyyy}-${mm}-${dd}`;
    }

    document.getElementById('resetBtn').addEventListener('click', () => {
      document.getElementById('flightForm').reset();
      const now = new Date();
      const yyyy = now.getFullYear();
      const mm = String(now.getMonth() + 1).padStart(2, '0');
      const dd = String(now.getDate()).padStart(2, '0');
      dateInput.value = `${yyyy}-${mm}-${dd}`;
      const fb = document.getElementById('fallbackLink');
      if (fb) fb.remove();
    });

    document.getElementById('flightForm').addEventListener('submit', (e) => {
      e.preventDefault();

      const airline = (document.getElementById('airline').value || 'AF').trim().toUpperCase();
      const flightNoRaw = (document.getElementById('flightNo').value || '').trim().toUpperCase();
      const dep = (document.getElementById('dep').value || '').trim().toUpperCase();
      const arr = (document.getElementById('arr').value || '').trim().toUpperCase();

      const dateStr = document.getElementById('date').value; // yyyy-mm-dd
      if (!dateStr) { alert('Please select a date.'); return; }
      const [year, monthStr, dayStr] = dateStr.split('-');
      const yearNum = parseInt(year, 10);
      const monthNum = parseInt(monthStr, 10);
      const dayNum = parseInt(dayStr, 10);

      let airlineCode = airline;
      let flightNumberDigits = '';
      if (flightNoRaw) {
        const m = flightNoRaw.match(/^([A-Z]{1,3})?\s*0*([0-9]{1,4})$/);
        if (!m) { alert('Invalid flight number. Examples: AF83 or 83'); return; }
        if (m[1]) airlineCode = m[1].toUpperCase();
        flightNumberDigits = m[2];
      }

      let target = '';
      if (flightNumberDigits) {
        target = `https://www.flightstats.com/v2/flight-tracker/${encodeURIComponent(airlineCode)}/${encodeURIComponent(flightNumberDigits)}?year=${yearNum}&month=${monthNum}&date=${dayNum}`;
      } else {
        if (!dep || !arr || dep.length !== 3 || arr.length !== 3) {
          alert('Please enter valid 3-letter IATA departure and arrival codes, e.g., CDG and JFK.');
          return;
        }
        target = `https://www.flightstats.com/v2/flight-tracker/route/${encodeURIComponent(dep)}/${encodeURIComponent(arr)}?year=${yearNum}&month=${monthNum}&date=${dayNum}`;
      }

      // Open in new tab to avoid iframe blocking (Mayday)
      window.open(target, '_blank', 'noopener');

      // Fallback link if blocked
      setTimeout(() => {
        if (!document.getElementById('fallbackLink')) {
          const p = document.createElement('p');
          p.id = 'fallbackLink';
          p.innerHTML = `If nothing opened, click here: <a href="${target}" target="_blank" rel="noopener">Open flight status</a>`;
          document.body.appendChild(p);
        }
      }, 400);
    });
  </script>
</body>
</html>
